# Video Generation System - Environment Configuration
# ===================================================
# Copy this file to .env and fill in your values

# =============================================================================
# AI API Keys (REQUIRED for AI features)
# =============================================================================

# Claude API (Anthropic) - Required for AI-enhanced narration and translation
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API (Optional) - Alternative AI provider
# OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# YouTube Features (Optional)
# =============================================================================

# YouTube Data API v3 Key - Required for YouTube video search
# Get from: https://console.cloud.google.com/apis/credentials
# YOUTUBE_API_KEY=your-youtube-api-key-here

# =============================================================================
# System Paths (Optional - auto-detected if not set)
# =============================================================================

# FFmpeg Path - Leave blank for automatic detection
# FFMPEG_PATH=

# Output directories
# OUTPUT_DIR=./output
# AUDIO_DIR=./audio
# VIDEO_DIR=./videos

# =============================================================================
# Web UI Configuration
# =============================================================================

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8002

# Debug mode (enables auto-reload)
# DEBUG=false

# =============================================================================
# Translation Settings
# =============================================================================

# Translation method: claude (high quality) or google (free, lower quality)
TRANSLATION_METHOD=claude

# Default language
# DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
# SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh,ar

# =============================================================================
# Video Generation Defaults
# =============================================================================

# Default accent color: blue, purple, orange, green, pink, cyan
DEFAULT_ACCENT_COLOR=blue

# Default voice: male, male_warm, female, female_friendly
DEFAULT_VOICE=male

# Video resolution
# VIDEO_WIDTH=1920
# VIDEO_HEIGHT=1080
# VIDEO_FPS=30

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
# LOG_FILE=./output/logs/video_gen.log

# =============================================================================
# Performance
# =============================================================================

# Maximum concurrent video generation jobs
# MAX_CONCURRENT_JOBS=3

# Enable GPU acceleration (NVENC) if available
# USE_GPU=true
